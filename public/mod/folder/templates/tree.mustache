{{!
    @template mod_folder/tree

    Template for displaying a folder content subdirs and files tree.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "name": "Folder",
        "icon": "<img src='icon' alt='alt'>",
        "hassubdirs": true,
        "isroot": true,
        "subdirs": [
            {
                "name": "File1",
                "icon": "<img src='icon' alt='alt'>",
                "hassubdirs": false,
                "subdirs": null
            }
        ]
    }
}}

<p>
    {{{icon}}}

    {{#url}}
        <a href="{{url}}">{{{name}}}</a>
    {{/url}}
    {{^url}}
        {{{name}}}{{#isroot}} <span class="visually-hidden">{{#str}} topleveldirectory, mod_folder {{/str}}</span>{{/isroot}}
    {{/url}}
</p>
{{#hassubdirs}}
    <ul role="group">
        {{#subdirs}}
            <li role="treeitem" tabindex="-1" {{#hassubdirs}}aria-expanded="{{#showexpanded}}true{{/showexpanded}}{{^showexpanded}}false{{/showexpanded}}"{{/hassubdirs}}>
                {{>mod_folder/tree}}
            </li>
        {{/subdirs}}
    </ul>
{{/hassubdirs}}
